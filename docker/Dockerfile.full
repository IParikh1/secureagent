# SecureAgent - Full Installation with all optional dependencies
# Use this for complete functionality including ML, cloud scanning, and integrations

FROM python:3.11-slim as builder

WORKDIR /app

RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    git \
    && rm -rf /var/lib/apt/lists/*

COPY pyproject.toml README.md ./
COPY src/ ./src/

RUN pip install --no-cache-dir poetry && \
    poetry config virtualenvs.create false && \
    poetry build -f wheel

FROM python:3.11-slim as runtime

LABEL maintainer="SecureAgent Team"
LABEL description="AI & Cloud Security Platform - Full Installation"
LABEL version="1.0.2"

WORKDIR /app

# Install system dependencies for ML and cloud
RUN apt-get update && apt-get install -y --no-install-recommends \
    git \
    libgomp1 \
    && rm -rf /var/lib/apt/lists/*

RUN useradd -m -u 1000 secureagent

COPY --from=builder /app/dist/*.whl /tmp/

# Install with all extras, pinning Typer/Click to avoid CLI compatibility issues
RUN pip install --no-cache-dir 'typer>=0.9.0,<0.12.0' 'click>=8.0.0,<8.2.0' && \
    pip install --no-cache-dir /tmp/*.whl && \
    pip install --no-cache-dir "secureagent[full]" && \
    rm /tmp/*.whl

# Copy pre-trained models if available (skip if models directory doesn't exist)
RUN mkdir -p /app/models && chown secureagent:secureagent /app/models

USER secureagent

ENV PYTHONUNBUFFERED=1
ENV SECUREAGENT_CONFIG_DIR=/app/config
ENV SECUREAGENT_MODEL_DIR=/app/models

ENTRYPOINT ["secureagent"]
CMD ["--help"]

HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD secureagent --version || exit 1
